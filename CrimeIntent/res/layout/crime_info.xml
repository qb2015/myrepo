<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        style="?android:attr/autoCompleteTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_title"
        android:textStyle="bold"
        />
	<EditText 
	    android:id="@+id/crime_info_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="3dp"
	    />
	<TextView 
	    style="?android:attr/autoCompleteTextViewStyle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/fragment_date"
	    android:textStyle="bold"
	    />
	<Button 
	    android:id="@+id/crime_info_date"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#50ff0000"
	    android:layout_marginLeft="3dp"
	    android:layout_marginRight="3dp"
	    />
	<CheckBox 
	    android:id="@+id/crime_info_solved"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/fragment_isSolved"
	    />
</LinearLayout>
